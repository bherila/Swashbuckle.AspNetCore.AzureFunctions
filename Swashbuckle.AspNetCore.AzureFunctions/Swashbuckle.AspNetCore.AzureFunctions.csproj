<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Middleware to expose Swagger JSON endpoints from Azure Function APIs built on ASP.NET Core</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Swashbuckle.AspNetCore.AzureFunctions</AssemblyName>
    <SignAssembly Condition="'$(OS)'=='Windows_NT'">true</SignAssembly>
    <PackageId>Swashbuckle.AspNetCore.AzureFunctions2</PackageId>
    <PackageTags>swagger;documentation;discovery;help;webapi;aspnet;aspnetcore;azure-functions</PackageTags>
    <PackageProjectUrl>https://github.com/dviana07/Swashbuckle.AspNetCore.AzureFunctions</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/dviana07/Swashbuckle.AspNetCore.AzureFunctions/blob/master/LICENSE</PackageLicenseUrl>
    <PackageVersion>1.2.0</PackageVersion>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/dviana07/Swashbuckle.AspNetCore.AzureFunctions.git</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BH.Swashbuckle.AspNetCore.Annotations" Version="4.0.0" />
    <PackageReference Include="BH.Swashbuckle.AspNetCore.Swagger" Version="4.0.0" />
    <PackageReference Include="BH.Swashbuckle.AspNetCore.SwaggerGen" Version="4.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ApiExplorer" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.1.3" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.DataAnnotations" Version="2.1.1" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Formatters.Json" Version="2.1.1" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.Http" Version="3.0.0" />
  </ItemGroup>

</Project>
